{
  "name": "hardhat-evvm-bench",
  "version": "1.0.0",
  "description": "Hardhat plugin for EVVM virtual blockchain benchmarking with parallel execution testing",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "evvm-bench": "./cli.cjs",
    "hardhat-evvm": "./hardhat-evvm",
    "hardhat3-evvm": "./hardhat3-wrapper.mjs"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "dashboard:dev": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm run build",
    "demo": "npm run build && npx hardhat evvm:benchmark --demo"
  },
  "keywords": [
    "hardhat",
    "plugin",
    "evvm",
    "arcology",
    "parallel-execution",
    "benchmarking",
    "ethereum",
    "virtual-blockchain"
  ],
  "author": "Virtual Chain Sandbox Team",
  "license": "MIT",
  "peerDependencies": {
    "hardhat": "^3.0.0"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.1",
    "@nomicfoundation/hardhat-verify": "^3.0.3",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "chai": "^6.2.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "mocha": "^11.7.4",
    "ora": "^5.4.1",
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "hardhat": "^3.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
